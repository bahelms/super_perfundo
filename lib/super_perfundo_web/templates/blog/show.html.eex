<section class="post-show">
  <article class="post-card">
    <h1><%= @post.title %></h1>
    <div class="post-meta">
      <div><%= format_date(@post) %></span></div>
      <div class="tags-list">tags: <%= tags(@post) %></div>
    </div>
    <div class="body"><%= raw @post.body %></div>
  </article>
</section>
