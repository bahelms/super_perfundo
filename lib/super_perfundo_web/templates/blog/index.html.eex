<section>
  <h2>Posts</h2>
</section>
<section id="posts-list">
  <%= for post <- @posts do %>
    <article>
      <div><strong> Title:</strong> <span><%= post.title %> </span></div>
      <div><strong> Published:</strong> <span><%= post.date %> </span></div>
      <div><%= raw post.body %></div>
    </article>
  <% end %>
</section>
